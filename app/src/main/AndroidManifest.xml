<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--READ_EXTERNAL_STORAGE已经在安卓13以上版本弃用,通过READ_MEDIA_AUDIO替代-->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!--大于安卓13版本的软件已经弃用了WRITE_EXTERNAL_STORAGE权限,需通过MediaStore.createWriteRequest来写入共享储存空间-->
    <!--<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- TTS引擎需要的权限 -->
    <uses-permission android:name="android.permission.BIND_TEXT_TO_SPEECH_ENGINE" />
    <!-- Android 13+ 需要的权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <!-- TTS引擎需要的额外权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Android 11+ 包可见性配置，允许系统发现TTS引擎 -->
    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
        <package android:name="com.android.settings" />
    </queries>

    <application
        android:name=".configuration.TTSApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TTSOnline"
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".function.TTSService"
            android:exported="true"
            android:permission="android.permission.BIND_TEXT_TO_SPEECH_ENGINE"
            android:foregroundServiceType="mediaProjection"
            android:process=":tts">
            <intent-filter>
                <action android:name="android.intent.action.TTS_SERVICE" />
            </intent-filter>
            <meta-data
                android:name="android.speech.tts"
                android:resource="@xml/tts_engine" />
        </service>
    </application>
    

</manifest>